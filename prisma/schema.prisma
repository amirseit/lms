// prisma/schema.prisma
generator client {
 provider = "prisma-client-js"
}
datasource db {
 provider = "postgresql"
 url = env("DATABASE_URL")
}
model Org {
 id String @id @default(cuid())
 name String
 slug String @unique
 users UserOrg[]
 createdAt DateTime @default(now())
}
model User {
 id String @id @default(cuid())
 email String @unique
 clerkId String @unique // ties to Clerk user
 role Role @default(LEARNER)
 orgs UserOrg[]
 createdAt DateTime @default(now())
}
enum Role {
 ADMIN
 TEACHER
 LEARNER
}
model UserOrg {
 userId String
 orgId String
 role Role @default(LEARNER)
 @@id([userId, orgId])
 user User @relation(fields: [userId], references: [id])
 org Org @relation(fields: [orgId], references: [id])
}
